{
  "name": "anagram-search-api",
  "version": "1.0.0",
  "description": "API that allows fast searches for anagrams",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run tsc",
    "build-dev": "npm run tsc -- --watch",
    "build-docs": "aglio -i docs/api/api-documentation.apib -o docs/api/index.html",
    "docs": "open -a Google\\ Chrome docs/api/index.html",
    "docker": "npm run docker-build && npm run dc-up",
    "docker-build": "docker build -t anagram-search:local .",
    "dc-up": "docker-compose up",
    "import": "node dist/import.js",
    "listfiles": "npm run tsc --listFiles",
    "start": "npm run build && npm run import && node dist/app.js",
    "start-dev": "REDIS_HOST=127.0.0.1 supervisor -- dist/app.js",
    "start-without-import": "npm run build && node dist/app.js",
    "test": "mocha ./test/**/*.spec.js --recursive",
    "tsc": "tsc",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test-ruby": "ruby anagram_test.rb"
  },
  "author": "chris craig <chris@cjcraig.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/giarcjc/anagram-search.git"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^5.0.0",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0",
    "supervisor": "^0.12.0"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/express": "^4.16.0",
    "@types/node": "^10.9.2",
    "@types/redis": "^2.8.6",
    "aglio": "^2.3.0",
    "ajv": "^6.5.3",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "es6-promise": "^4.2.4",
    "express": "^4.16.3",
    "redis": "^2.8.0",
    "redis-stream": "^0.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.1"
  }
}
